<h1><%= @task.title  %></h1>
<p><%= @task.details %></p>


 <% if @task.completed %>

  <p><input type="checkbox" checked> This task is completed</p>
 <% else %>

  <p><input type="checkbox">This task is not completed now</p>
 <% end %>

<%= link_to "Back to list", tasks_path, class: "btn btn-flat"  %>

<%= link_to "Edit the task", task_edit_path(@task.id), class: "btn btn-flat"  %>

